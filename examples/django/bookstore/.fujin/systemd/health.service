# Health service
# Learn more: https://www.freedesktop.org/software/systemd/man/systemd.service.html

[Unit]
Description={app_name} health server
After=network.target

[Service]
Type=simple
User={user}

# Main command
ExecStart={app_dir}/.venv/bin/bookstore health

[Install]
WantedBy=multi-user.target
